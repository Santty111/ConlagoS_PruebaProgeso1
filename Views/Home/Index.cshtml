@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4">Bienvenido</h1>
    <p class="lead">Disfruta de esta app hecha en ASP.NET Core</p>

    <!-- Imagen del meme -->
    <img src="~/images/meme-favorito.jpg" class="meme-estilo mt-3" alt="Meme favorito" />

    <!-- Campo de texto + botón -->
    <div class="mt-4">
        <input type="text" id="textoUsuario" class="form-control w-50 mx-auto mb-3" placeholder="Escribe algo aquí..." />

        <button class="btn btn-outline-info btn-lg" onclick="mostrarAlerta()">
            Mostrar alerta
        </button>
    </div>
</div>

@section Scripts {
    <script>
        function mostrarAlerta() {
            const valor = document.getElementById("textoUsuario").value;
            alert("Mi nombre es Santiago Conlago, mi hobbie es programar, y el valor del campo de texto es: " + valor);
        }
    </script>
}
